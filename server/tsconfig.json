{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "./src",
        "paths": {
            "@root/*": ["*"],
            "@main/*": ["main/*"],
            "@common/*": ["common/*"],
            "@settings": ["settings/index"],
            "@settings/*": ["settings/*"],
            "@lookups/*": ["lookups/*"]
        }
    },
    "include": ["src"]
}
