{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "build",
        "noEmit": false,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@theming/*": ["src/theming/*"],
            "@home/*": ["src/home/*"],
            "@weather/*": ["src/weather/*"],
            "@api/*": ["src/api/*"]
        }
    },
    "include": ["src"],
    "exclude": ["src/**/*.test.*"]
}
